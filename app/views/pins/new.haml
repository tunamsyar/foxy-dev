- provide :page_title, 'PIN Purchase'
= simple_form_for @pin, url: pins_path do |f|
  .row
    .col-12
      .card
        .card-block
          .card-title Operator
          .card-text.text-center
            / = f.collection_radio_buttons :operator_id, @operators.map {|a| [a.id, a.operator_name ]}, :first, :last
            %div{'data-toggle':'buttons'}
              .btn.btn-hotlink.m-2
                %input{type: 'radio', name: 'test'}
              .btn.btn-digi.m-2
                %input{type: 'radio', name: 'test'}
              .btn.btn-umobile.m-2
                %input{type: 'radio', name: 'test'}
              .btn.btn-tunetalk.m-2
                %input{type: 'radio', name: 'test'}
              .btn.btn-onexox.m-2
                %input{type: 'radio', name: 'test'}
              .btn.btn-xpax.m-2
                %input{type: 'radio', name: 'test'}
  .row.mt-5
    .col-12
      .card
        .card-block
          .card-title Amount
          .card-text.text-center
            %div{'data-toggle':'buttons'}
              .btn.btn-radio.m-2
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 5
              .btn.btn-radio.m-2
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 10
              .btn.btn-radio.m-2
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 15
              .btn.btn-radio.m-2
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 20
              .btn.btn-radio.m-2
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 30
              .btn.btn-radio.m-2
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 50
              .btn.btn-radio.m-2.px-0
                %input{type: 'radio', name: 'test'}
                  .d-block RM
                  .d-block 100
  .row.mt-5.justify-content-center
    .btn.btn-red.m-2 Buy PIN
    = f.submit class: 'btn btn-red m-2'
